{% block contents %}
	<section id="coming" class="recents table-responsive">
		<h1 class="h3">Your Short URLs</h1>    <br/>
		{% if shorts %}
			<table>
				<thead>
				<tr>
					<th>Short ID</th>
					<th>Original URL</th>
					<th>Date</th>
					<th>Views</th>
					<th>Visbillity</th>
				</tr>
				</thead>
				<tbody>
				{% for row in shorts %}
					<tr>
						<td>{{ row[0] }}</td>
						<td><a href="{{ row[1] }}" target="_blank">{{ cutText(row[1], 38) }}</a></td>
						<td>{{ row[3] }}</td>
						<td>{{ row[2] }}</td>
						{% if row[4] == 1 %}
							<td>Public</td>
						{% else %}
							<td>Private</td>
						{% endif %}
					</tr>
				{% endfor %}
				</tbody>
			</table>
		{% else %}
			<h2 class="h5">No rows found</h2>
			<p>When you make a short, it will appear here.</p>
		{% endif %}
		<p><a href="/">
			<button class="comingbtn btn btn-blue">Return to home</button>
		</a></p>
	</section>
{% endblock %}
